.goods-swiper {
  width: 100vw;
  height: 100vw;
}
.goods-swiper .goods-swiper-img {
  width: 100vw;
  height: 100vw;
  background-color: #eee;
}
.goods-info {
  padding: 35rpx;
}
.goods-info .goods-info-head {
  display: flex;
  font-size: 35rpx;
  font-weight: 700;
  justify-content: space-between;
  padding-bottom: 20rpx;
}
.goods-info .goods-info-head .goods-info-head-left {
  color: var(--mainColor);
}
.goods-info .goods-info-head .goods-info-head-left::before {
  content: 'Â¥';
  font-size: 80%;
}
.goods-info .goods-info-head .goods-info-head-rigth {
  display: flex;
  padding-right: 8rpx;
}
.goods-info .goods-info-head .goods-info-head-rigth .iconfont {
  padding-left: 46rpx;
  color: var(--fadeColor);
  position: relative;
}
.goods-info .goods-info-head .goods-info-head-rigth .iconfont .share-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.goods-info .goods-info-body {
  height: 85rpx;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.divider {
  height: 19rpx;
  background-color: #f9f9f9;
}
.detail {
  padding: 30rpx 0;
  text-align: center;
}
.detail .detail-rich {
  padding: 17rpx 17rpx 70rpx;
  font-size: 0;
}
.bottom-bar {
  position: fixed;
  background-color: #fff;
  bottom: 0;
  width: 100%;
  height: 94rpx;
  align-items: center;
  display: flex;
  padding: 0 35rpx;
  border-top: 1px solid #DEDEDE;
}
.bottom-bar .bottom-bar-icon {
  text-align: center;
  padding-right: 50rpx;
  font-size: 26rpx;
  color: var(--fadeColor);
  position: relative;
}
.bottom-bar .bottom-bar-icon .contact-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
.bottom-bar .bottom-bar-icon .iconfont {
  font-size: 45rpx;
}
.bottom-bar .bottom-bar-icon .bottom-bar-icon-text {
  font-size: 20rpx;
}
.bottom-bar .bottom-bar-btn {
  width: 196rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #FCAA23;
  margin-left: 22rpx;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
}
.bottom-bar .bottom-bar-btn:last-child {
  background-color: var(--mainColor);
}
